# myNode Unlock LND
# /etc/systemd/system/lnd_unlock.service

[Unit]
Description=Post LND Unlock
Wants=lnd.service
After=lnd.service

[Service]
Type=simple
ExecStart=/usr/bin/unlock_lnd.sh
User=root
Group=root
StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=unlock_lnd
Restart=always
RestartSec=1

[Install]
WantedBy=multi-user.target
